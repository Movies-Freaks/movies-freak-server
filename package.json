{
  "name": "movies-freak-server",
  "version": "1.0.0",
  "description": "An app to add films, tv shows and create watch lists",
  "main": "index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch",
    "build": "yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel ./ --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "start": "NODE_ENV=development nodemon --experimental-modules --es-module-specifier-resolution=node --watch api --watch app --watch database --watch index.js --watch knexfile.js index.js",
    "lint": "eslint .",
    "migrate:make": "knex migrate:make $1",
    "migrate:latest": "knex migrate:latest && knex migrate:latest --env test",
    "migrate:rollback": "knex migrate:rollback && knex migrate:rollback --env test",
    "test": "NODE_ENV=test yarn babel-node classpuccino/cli ./tests"
  },
  "repository": "git@github.com:jesusx21/movies-freak-server.git",
  "author": "Jesús Agustín Peña Meza",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.2",
    "axios": "^1.6.2",
    "clone-deep": "^4.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonschema": "^1.4.1",
    "knex": "^3.0.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.2",
    "pg": "^8.11.3",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-export-namespace-from": "^7.23.4",
    "@babel/plugin-transform-typescript": "^7.23.6",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@types/knex-cleaner": "^1.3.6",
    "@types/lodash": "^4.14.202",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "colors": "^1.4.0",
    "core-js": "3",
    "fixtures-generator": "^1.0.3",
    "json-schema-faker": "^0.5.5",
    "knex-cleaner": "^1.3.1",
    "sinon": "^17.0.1",
    "source-map-loader": "^5.0.0",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3"
  }
}
